<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2.0dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/counter_img"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:clickable="false"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:foregroundGravity="center_vertical">
    </ImageView>
    <TextView android:textSize="12.0sp"
        android:textColor="#ffb00636"
        android:id="@+id/app_desc"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_marginRight="100.0dip"
        android:layout_below="@+id/app_name"
        android:layout_alignLeft="@+id/app_name">
    </TextView>
    <TextView android:textSize="15.0sp"
        android:textStyle="bold"
        android:textColor="#ff0708ac"
        android:id="@+id/app_name"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_toRightOf="@+id/counter_img">
    </TextView>
    <Button android:textSize="15.0sp"
        android:textColor="#ffffffff"
        android:id="@+id/download_img"
        android:background="@drawable/oval"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_marginRight="3.0dip"
        android:text="install"
        android:layout_alignTop="@+id/app_name"
        android:layout_alignParentRight="true">
    </Button>
</RelativeLayout>
